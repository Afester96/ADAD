@model AfroDungeonAndDragons.ViewModels.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="form_row">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="registration_group">
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="registration_group">
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="registration_group">
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="registration_group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="content_button_body">
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>