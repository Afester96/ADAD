@using AfroDungeonAndDragons.Models.DefaultInformation
@model IEnumerable<DefaultRace>
@{
    ViewBag.Title = "Список рас";
}
<a asp-controller="Home" asp-action="Index">Главная</a> -> <a asp-controller="Backgrounds" asp-action="AllBackgrounds">Расы</a>
@foreach (var race in Model)
{
    <div>
        <p><h3><b><a asp-action="AboutRace" asp-controller="Races" asp-route-id="@race.Id">@race.Name</a></b></h3></p>
        <p><h5>@race.FromBook</h5></p>
        <p>@race.ShortDescription</p>
    </div>
}
