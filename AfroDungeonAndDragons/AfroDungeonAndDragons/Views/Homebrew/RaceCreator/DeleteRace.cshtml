@model AfroDungeonAndDragons.Models.CharacterCreator.Race
@{
    ViewBag.Title = "Удаление расы";
}
<div class="content_delete_title">
    <h2>Вы точно хотите удалить расу: @Model.Name</h2>
</div>
<div>
    <div class="content_input">
        <form asp-controller="RaceCreator" asp-action="DeleteRace" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>