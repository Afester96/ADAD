@using AfroDungeonAndDragons.Models.CharacterCreator
@model IEnumerable<Race>
@{
    ViewData["Title"] = "Расы";
}
<div class="line_row">
    <div class="line_text">
        <a asp-controller="Home" asp-action="Index">Главная</a>
    </div>
    <div class="line_arrow"></div>
    <div class="line_text">
        <a asp-controller="RaceCreator" asp-action="Races">Расы</a>
    </div>
</div>
<div class="top_button_body">
    <a asp-action="CreateRace">Создать расу</a>
</div>
<div class="all_background_content_row">
    @foreach (var race in Model)
    {
        <div class="all_content_body">
            <div class="all_content_body_title">
                <p><a asp-action="AboutRace" asp-controller="RaceCreator" asp-route-id="@race.Id">@race.Name</a></p>
            </div>
            <div class="all_content_body_description">
                <p>@race.ShortDescription</p>
            </div>
            <div class="all_content_body_description">
                <p>@race.ShortRacialTraitDescription</p>
            </div>
            <div class="content_button_body">
                <a asp-action="UpdateRace" asp-controller="RaceCreator" asp-route-id="@race.Id">Изменить расу</a>
                <a asp-action="DeleteRace" asp-controller="RaceCreator" asp-route-id="@race.Id">Удалить расу</a>
            </div>
        </div>
    }
</div>